 root = true


 [*]
 charset = utf-8
 indent_style = space
 indent_size = 4
 end_of_line = lf
 insert_final_newline = true
 trim_trailing_whitespace = true


 [*.cs]
 indent_style = space
 indent_size = 2


 [*.csproj]
 indent_style = space
 indent_size = 2


 [*.sln]
 indent_style = space
 indent_size = 2


 [*.md]
 trim_trailing_whitespace = false


 # Rider / ReSharper settings
 [*Generated.cs]
 indent_style = space
 indent_size = 4


 [*.g.cs]
 indent_style = space
 indent_size = 4


 [*.g.i.cs]
 indent_style = space
 indent_size = 4


 # Visual Studio settings
 [*.xaml]
 indent_style = space
 indent_size = 4

